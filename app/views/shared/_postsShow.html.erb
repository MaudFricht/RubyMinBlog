<% @posts.each do |post| %>

        <h2><%= post.id %> - <%= post.title %></h2>
        <span>De <%= post.user.username %></span>
        <p class="articleDescription"><%= post.content %></p>
        <%= link_to "Lire l'article", post_path(post.id), { :class=>"readButton" } %>

        <% if user_signed_in? %>
            <% if current_user.id == post.user_id %>
                <%= button_to "Delete", {:controller => "post", :action => 'destroy', :id => post.id}, :confirm => "Are you sure you want to delete it ?", :method => :delete %>
                <%= link_to "Editer", edit_post_path(post.id) %>
            <% end %>
        <% end %>
<% end %>
