<h1>Laisser un commentaire :</h1>
    <%= form_for @comment do |f| %>

            <%= f.label 'Comment' %><br>

            <%= f.label 'Contenu' %><br>
            <%= f.text_area :content, placeholder: 'Ecrivez votre commentaire' %><br><br>

            <%= f.hidden_field :user_id, value: 1 %>

            <%= f.submit 'Envoyer' %>
<% end %>
