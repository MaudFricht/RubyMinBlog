<%= render partial: 'shared/menu' %>
<h1>Créer un nouvel article :</h1>
    <%= form_for @post do |f| %>

            <%= f.label 'Titre' %><br>

            <%= f.text_field :title, placeholder: 'Insérez votre titre...' %><br><br>

            <%= f.label 'Contenu' %><br>
            <%= f.text_area :content, placeholder: 'Insérez votre contenu...' %><br><br>

            <%= f.hidden_field :user_id, value: current_user.id %>

            <%= f.submit 'Envoyer' %>
<% end %>
